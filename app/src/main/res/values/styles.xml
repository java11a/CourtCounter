<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Background color of buttons in the app -->
        <!-- Will only work on phones running API 22 and above. So if you have an older phone, the buttons will not be colored orange.-->
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

</resources>
